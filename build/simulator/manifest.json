{
	"modules": {
		"*": [
			"./screen",
			"$(MODULES)/base/time/*",
			"$(MODULES)/base/time/$(PLATFORM)/*",
			"$(MODULES)/base/timer/*",
			"$(MODULES)/base/timer/$(PLATFORM)/*"
		]
	},
	"preload": [
		"time",
		"timer"
	],
	"platforms": {
		"lin/*": {
			"include": "./targets/$(SUBPLATFORM)/manifest.json"
		},
		"mac/*": {
			"include": "./targets/$(SUBPLATFORM)/manifest.json"
		},
		"win/*": {
			"include": "./targets/$(SUBPLATFORM)/manifest.json"
		},
		"wasm/*": {
			"include": "./targets/$(SUBPLATFORM)/manifest.json"
		}
	}
}
